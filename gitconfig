[user]
    name = !!name!!
    email = !!email!!
    useConfigOnly = true
[color]
    diff = always
    grep = always
    status = always
[push]
    default = simple
[alias]
    st = status
    s = status
    c = commit
    pul = pull
    a = add
    d = diff
    dh = diff HEAD
    dc = diff --cached
    l = log
    ll = log --format='tformat:%C(yellow)%h%Creset %C(bold)%aN%Creset %C(cyan)%s %Creset(%cr)%+b'
[commit]
	verbose = true
[stash]
	showPatch = true
